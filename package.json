{
	"author": {
		"email": "ravalico.giovanni@gmail.com",
		"name": "Giovanni Ravalico",
		"url": "https://github.com/suddenlyGiovanni"
	},
	"catalogs": {
		"effect": {
			"@effect/language-service": "0.55.2",
			"effect": "3.19.0"
		},
		"lint": {
			"@biomejs/biome": "2.3.3"
		},
		"test": {
			"@effect/vitest": "latest",
			"vitest": "4.0.7"
		},
		"types": {
			"@total-typescript/ts-reset": "latest",
			"@types/bun": "latest"
		},
		"typescript": {
			"@tsconfig/bun": "latest",
			"@tsconfig/strictest": "latest",
			"typescript": "^5.9.3"
		}
	},
	"description": "Event-driven, multi-tenant service-call agent",
	"devDependencies": {
		"@biomejs/biome": "catalog:lint",
		"@effect/vitest": "catalog:test",
		"vitest": "catalog:test"
	},
	"devEngines": {
		"packageManager": {
			"name": "bun",
			"onFail": "error",
			"version": "^1.3.0"
		},
		"runtime": {
			"name": "bun",
			"onFail": "error",
			"version": "^1.3.0"
		}
	},
	"engines": {
		"bun": ">=1.3.0"
	},
	"license": "MIT",
	"module": "index.ts",
	"name": "event-service-agent",
	"private": true,
	"scripts": {
		"check": "biome check --write .",
		"clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
		"doc-check": "deno doc --lint ./packages/**/src/**/*.ts",
		"doc-check:examples": "deno check --doc-only ./packages/**/src/**/*.ts",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"lint:md": "bunx --bun markdownlint-cli2 --fix docs/**/*.md",
		"test": "bun --bun vitest",
		"type-check": "bun --bun --workspaces type-check"
	},
	"type": "module",
	"workspaces": ["packages/*"]
}
