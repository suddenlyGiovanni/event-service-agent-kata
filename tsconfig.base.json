{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"exactOptionalPropertyTypes": true,
		"plugins": [
			{
				"name": "@effect/language-service",
				"namespaceImportPackages": [
					"effect",
					"@effect/ai",
					"@effect/ai-anthropic",
					"@effect/ai-openai",
